= form_for @board do |f|
  -if @board.errors.any?
    #error_explanation
      %h2= "#{pluralize(@board.errors.count, "error")} prohibited this board from being saved:"
      %ul
        - @board.errors.full_messages.each do |msg|
          %li= msg
  %p
    %label{for: 'name'} Name
    = f.text_field :name
  %p
    %label{for: 'short_name'} Short Name
    = f.text_field :short_name

  .actions
    = f.submit 'Save'
