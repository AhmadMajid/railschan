= form_for @post do |f|
  %p
    %label{for: 'author'} Name
    = f.text_field :author
  %p
    %label{for: 'author_email'} E-mail
    = f.text_field :author_email
  %p
    %label{for: 'subject'} Subject
    = f.text_field :subject
  %p
    %label{for: 'image'} Image
    = f.file_field :image
  %p
    %label{for: 'content'} Comment
    = f.text_area :content
  %p
    = f.submit
